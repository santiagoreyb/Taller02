<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="109dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/camaraImageButtonID"
            android:contentDescription="@string/boton_de_camara"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/external_camera_icon" />

        <ImageButton
            android:id="@+id/contactosImageButtonID"
            android:contentDescription="@string/boton_de_contactos"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/external_contacts_icon"
            tools:srcCompat="@drawable/external_contacts_icon" />

        <ImageButton
            android:id="@+id/mapaImageButtonID"
            android:contentDescription="@string/boton_de_mapa"
            android:layout_width="230dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/external_maps_icon" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>